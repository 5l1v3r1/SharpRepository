<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="sharpRepository" type="SharpRepository.Repository.Configuration.SharpRepositorySectionGroup, SharpRepository.Repository">
      <sectionGroup name="repositories" type="SharpRepository.Repository.Configuration.RepositoriesSectionGroup, SharpRepository.Repository">
        <section name="default" type="SharpRepository.Repository.Configuration.DefaultSection, SharpRepository.Repository"/>
        <section name="inMemoryRepository" type="SharpRepository.InMemoryRepository.Config, SharpRepository.InMemoryRepository" />
        <section name="ef5Repository" type="SharpRepository.Ef5Repository.Config, SharpRepository.Ef5Repository" />
        <section name="ravenDbRepository" type="SharpRepository.RavenDbRepository.Config, SharpRepository.RavenDbRepository" />
      </sectionGroup>
      <sectionGroup name="cachingProviders">
        <section name="inMemoryCachingProvider" type="SharpRepository.Repository.Configuration.InMemoryCachingProviderSection, SharpRepository.Repository"/>
<!--        <section name="redisCachingProvider" type="SharpRepository.Caching.Redis.Config, SharpRepository.Caching.Redis"/>-->
      </sectionGroup>
      <sectionGroup name="cachingStrategies">
        <section name="standardCachingStrategy" type="SharpRepository.Repository.Configuration.StandardCachingStrategySection, SharpRepository.Repository"/>
        <section name="timeoutCachingStrategy" type="SharpRepository.Repository.Configuration.TimeoutCachingStrategySection, SharpRepository.Repository"/>
      </sectionGroup>
    </sectionGroup>
  </configSections>

  <connectionStrings>
    <add name="Ef5ConnectionString" connectionString="Data Source=test.mdf"/>
  </connectionStrings>

  <sharpRepository>
    <repositories>
      <ef5Repository name="ef5" connectionString="Ef5ConnectionString" cachingStrategy="standard"/>
      <inMemoryRepository name="inMemory" cachingStrategy="timeout"/>
      <ravenDbRepository name="ravenDb" url="http://localhost:8080"/>
      
      <default name="inMemory"/>
    </repositories>
    <cachingProviders>
      <inMemoryCachingProvider name="inMemoryProvider"/>
<!--      <redisCachingProvider name="redisProvider" host="localhost" port="8432" password="testpassword"/>-->
    </cachingProviders>
    <cachingStrategies>
      <standardCachingStrategy name="standard" cachingProvider="inMemoryProvider" />
      <timeoutCachingStrategy name="timeout" cachingProvider="inMemoryProvider" timeout="200"/>
    </cachingStrategies>
  </sharpRepository>
</configuration>